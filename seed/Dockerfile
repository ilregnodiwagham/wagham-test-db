FROM mongo:6.0

WORKDIR /test-db
COPY ./dumps/ .
COPY ./seed.sh .
ARG MONGO_CONTAINER
ARG MONGO_CONTAINER_PORT
ARG MONGO_USER
ARG MONGO_PASSWORD

ENV MONGO_HOST=${MONGO_CONTAINER}
ENV MONGO_PORT=${MONGO_CONTAINER_PORT}
ENV DB_USER=${MONGO_USER}
ENV DB_PWD=${MONGO_PASSWORD}

RUN chmod +x seed.sh

CMD [ "/test-db/seed.sh" ]